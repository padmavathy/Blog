<%= form_for (:user, :url => {:controller=>"users", :action=> "create"}) do |f| %>

<div class="field">
<%= f.label :email %><br />
<%= f.text_field :email %>
</div>
<div class="field">
<%= f.label :password %><br />
<%= f.password_field :password %>
</div>
<div class="field">
<%= f.label :password_confirmation %><br />
<%= f.password_field :password_confirmation %>
</div>
<div class="actions">
<%= submit_or_cancel(f) %>
</div>
<% end %>

